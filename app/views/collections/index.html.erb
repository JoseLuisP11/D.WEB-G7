<div class="container-fluid" >
  <div class="card" id="note_container"> 
    <br>
    <h1>Collections</h1>
    
    <table class="table-responsive">
      <thead>
        <tr>
          <th>Title</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @collections.each do |collection| %>
         <% if collection.user == current_user %>
          <tr>
            <td><%= collection.title %></td>
            <td><%= link_to 'Show', collection %></td>
            <td><%= link_to 'Edit', edit_collection_path(collection) %></td>
            <td><%= link_to 'Destroy', collection, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
    <br>

    <%= link_to 'New Collection', new_collection_path, class:"btn btn-secondary"  %>
  </div>
</div>